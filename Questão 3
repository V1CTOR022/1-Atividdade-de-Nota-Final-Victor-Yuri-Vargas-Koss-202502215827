<script>
    function cor() {
      const cores = ['pink', 'red', 'yellow', 'blue', 'green', 'black', 'orange', 'purple', 'cyan'];
      const aleatorio = cores[Math.floor(Math.random() * cores.length)];
      document.body.style.backgroundColor = aleatorio;
    }
  </script>
  <style>
     body {
      background-color: lightgray;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      transition: background-color 0.5s;
    }
     button {
      padding: 20px 40px;
      font-size: 20px;
